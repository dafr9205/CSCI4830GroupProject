<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context="com.example.devon.aslbuddy.basicActivity"
    android:background="@mipmap/menubackground">


    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:onClick="browser1"
        android:paddingTop="50dp"
        app:srcCompat="@mipmap/start_asl" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Click the button above to head over to StartASL.com in your mobile browser.\n\nHere, you can find demonstration videos for the top 150 basic words in American Sign Language, to get you started. "
        android:fontFamily="casual"
        android:textSize="17sp"
        android:textColor="#fff"
        android:background="#80000000"
        android:textStyle="bold"/>


</LinearLayout>

